<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.tripledip.diana.ui.demo.ColorButtonFragment"
    android:padding="20dp"
    android:background="@drawable/gray_rounded_corners">


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Color Demo Fragment"
        android:id="@+id/colorFragName"
        android:password="false"
        android:clickable="true"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/gray_rectangle"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/colorContainer"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/leftColor"
            android:layout_weight=".50"
            android:textAlignment="center"
            android:background="@drawable/circle"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left Atom"
                android:id="@+id/leftText"
                android:layout_gravity="center"
                android:textColor="#ff000000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rightColor"
            android:layout_weight=".50"
            android:textAlignment="center"
            android:background="@drawable/circle"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right Atom"
                android:id="@+id/rightText"
                android:layout_gravity="center"
                android:textColor="#ff000000" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
